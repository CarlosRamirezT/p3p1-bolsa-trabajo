@model p3p1_bolsa_trabajo_new.Models.Usuario

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/login-style.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                
                <div class="account-wall">
                    <h1 class="text-center login-title">Log In</h1>
                    <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                         alt="">
                    <form class="form-signin" action="Login" method="post">
                        <input type="email" name="email" class="form-control" placeholder="Correo Electronico" required autofocus>
                        <input type="password" name="password_usuario" class="form-control" placeholder="Contraseña" required>
                        <button class="btn btn-lg btn-primary btn-block" type="submit">
                            Loguearse
                        </button>
                        <label class="checkbox pull-left">
                            <input type="checkbox" value="remember-me">
                            Recordarme
                        </label>
                        <a href="#" class="pull-right need-help">Necesitas Ayuda? </a><span class="clearfix"></span>
                        <br/>
                        @Html.ActionLink("Aun no tienes una cuenta?, Registrate", "Signup")
                    </form>
                    <div class="my-alert-message">
                        <br />
                        <td>
                            <label class="label-success">@ViewBag.SuccesMessage</label>
                            <label class="label-danger">@ViewBag.ErrorMessage</label>
                            <label class="label-danger">@ViewBag.DuplicateMessage</label>
                        </td>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</body>
</html>
