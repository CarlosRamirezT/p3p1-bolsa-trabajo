@model p3p1_bolsa_trabajo_new.Models.Usuario

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Loginn</title>
    <style>
        .field-validation-error {
            color: red;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="alert alert-success">
                        <h3 style="text-decoration:underline">LOGIN</h3>
                    </div>
                    <table class="table table-bordered table-hover table-responsive">
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-md-2" })
                            </td>
                            <td>
                                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>
                        <tr>
                            <td>@Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })</td>
                        </tr>
                        <tr>
                            <td>@Html.LabelFor(model => model.password_usuario, htmlAttributes: new { @class = "control-label col-md-2" })</td>
                            <td>@Html.EditorFor(model => model.password_usuario, new { htmlAttributes = new { @class = "form-control" } })</td>
                        </tr>
                        <tr>
                            <td>@Html.ValidationMessageFor(model => model.password_usuario, "", new { @class = "text-danger" })</td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <input type="submit" name="name" class="btn btn-success" value="Logear" />
                                <label class="label-success">@ViewBag.DuplicateMessage</label>
                            </td>
                        </tr>

                    </table>
                </div>
            </div>
        </div>
    }

</body>
</html>
