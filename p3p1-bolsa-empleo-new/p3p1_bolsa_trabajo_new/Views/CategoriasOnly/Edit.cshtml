@model p3p1_bolsa_trabajo_new.Models.categoriaOfertaEmpleo

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h2 class="alert alert-info">Editar Categoria</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<table class="table table-bordered table-hover table-responsive">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id_categoria_ofertas)

    <tr>
        <th>@Html.LabelFor(model => model.titulo, htmlAttributes: new { @class = "control-label col-md-2" })</th>
        <td>
            @Html.EditorFor(model => model.titulo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.titulo, "", new { @class = "text-danger" })
        </td>
    </tr>
    <tr>
        <th></th>
        <td>
            @Html.ActionLink("Cancelar", "Index") |
            <input type="submit" value="Save" class="btn btn-success" />
        </td>
    </tr>

</table>

}
